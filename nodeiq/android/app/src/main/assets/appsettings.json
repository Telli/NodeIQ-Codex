{
  "feature_flags": {
    "transport_mqtt": true,
    "transport_libp2p": false
  },
  "mqtt": {
    "host": "broker.nodeiq.local",
    "port": 8883,
    "client_id_prefix": "nodeiq-",
    "tls_enabled": true,
    "ca_cert_asset": "certs/ca.crt",
    "client_cert_asset": "certs/client.crt",
    "client_key_asset": "certs/client.key",
    "keep_alive_sec": 30,
    "reconnect_backoff_sec": [1, 3, 5, 10, 20]
  },
  "topics": {
    "presence": "/registry/announce",
    "query": "/query/{agent_id}",
    "response": "/response/{query_id}"
  },
  "libp2p": {
    "bootstrap_multiaddrs": ["/dns4/bootstrap.nodeiq.local/udp/8000/quic-v1"],
    "namespace": "kmarket",
    "listen_on": ["/ip4/0.0.0.0/udp/0/quic-v1"],
    "enable_relay_client": true,
    "discovery_interval_sec": 30
  },
  "agent": { "agent_id": "ford_mech", "skills": ["P03xx", "F150"] }
}
